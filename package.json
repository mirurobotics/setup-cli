{
  "name": "setup-miru-cli",
  "description": "GitHub Action to install the Miru CLI",
  "version": "1.0.0",
  "author": "Miru Robotics",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/mirurobotics/setup-cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirurobotics/setup-cli.git"
  },
  "bugs": {
    "url": "https://github.com/mirurobotics/setup-cli/issues"
  },
  "keywords": [
    "actions",
    "miru",
    "cli",
    "robotics"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rimraf ./dist && npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/tool-cache": "^2.0.2",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^5.2.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "@types/js-yaml": "^4.0.9",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.54.0",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
